		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">W e l c o m e</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Dr Anthony Otenyi</a>
						</li>
					</ul>
				</div>
				<a href="#" class="btn-download">
					<span class="text">Doctor</span>
				</a>
			</div>


			<div class="module-wrapper">
				<div class="first-module">
					<div class="box-one box">
						<div>No of Patients</div>
						<% if(users){ %>

								<div class="num"><%= users.length %></div>	

						<% } %>	
					</div>
					<div class="box-two box">
						<div>ADMITTED PATIENTS</div>
						<div class="num">77</div>
					</div>
				</div>
				<div class="first-module">
					<div class="box-one box">
						<div>No of Female Patients</div>
						<% if(users){ %>

							<% const female = [] %>

							<% for(i = 0; i < users.length; i++){ %>

								<% const user = users[i] %>
								
								<% if(user.gender === 'FEMALE'){ %>

									<% female.push(user) %>

								<% } %>	

							<% } %>	

							<div class="num"><%= female.length %></div>

						<% } %>
				</div>
					<div class="box-two box">
						<div>No of Male Patients</div>
						<% if(users){ %>

							<% const male = [] %>

							<% for(i = 0; i < users.length; i++){ %>

								<% const user = users[i] %>
								
								<% if(user.gender === 'MALE'){ %>

									<% male.push(user) %>

								<% } %>	

							<% } %>	

							<div class="num"><%= male.length %></div>

						<% } %>
					</div>
				</div>
			</div>

			


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>PATIENTS</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<td>S/N</td>
								<th>Patients</th>
								<th>Hospital ID</th>
								<th>Age</th>
								<th>Gender</th>
								<th>Ward</th>
								<th>Action</th>							
							</tr>
						</thead>
						<tbody>
							<% if(users){ %>
								<% for(i = 0; i < users.length; i++) {%>

									<% const user = users[i] %>

									<tr>
										<td><%= i + 1 %></td>
										<td>
											<%= user.firstname %>  <%= user.lastname %>
										</td>
										<td><%= user.patientID %></td>
										<td><%= user.age %></td>
										<td><%= user.gender %></td>
										<td><span class="status completed">Martenity</span></td>
										<td><a href="/ANCOP/adminView/<%= user._id %>" class="view-p">VIEW</a></td>
									</tr>

								<% } %>	

							<% } %>	
						</tbody>
					</table>
				</div>
			</div>
			
		</main>
		

		
		<!-- MAIN -->
	</section>

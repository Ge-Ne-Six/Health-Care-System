	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<div class = "container flex">
				<div class="logo-div">
						<a href = "index.html" class = "navbar-brand">
								<img src = "/images/ANCOP logo.jpg" class="logo" alt = "site logo">
